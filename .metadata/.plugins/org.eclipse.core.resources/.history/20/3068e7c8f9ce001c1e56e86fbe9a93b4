package ejercicio15;

public class Posnet {
	
	public String efectuarPago(TarjetaDeCredito tarjetaDeCredito, double montoAAbonar, int cantidadDeCuotas) {
		String mensaje = null;
		double montoFinal;
		for(int i = 0; i < cantidadDeCuotas; i++) {
			montoFinal = montoAAbonar + montoAAbonar * 0.03;
		}
		
		
		
		switch(cantidadDeCuotas) {
		case 1: 
			montoFinal = montoAAbonar;
			break;
		case 2:
			montoFinal = montoAAbonar*;
			break;
		case 3:
			montoFinal = montoAAbonar;
			break;
		case 4:
			montoFinal = montoAAbonar;
			break;
		case 5:
			montoFinal = montoAAbonar;
			break;
		case 6:
			montoFinal = montoAAbonar;
			break;
		}
		
		
		
		return mensaje;
	}
	
	private boolean tarjetaSaldoSuficiente(TarjetaDeCredito tarjetaDeCredito, double montoAAbonar, int cantidadDeCuotas) {
		boolean esSuficiente = false;
		
		
		
		return esSuficiente;
	}
	
	
}
